<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>

<StackPane prefHeight="300.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="registerWindow.RegisterWindowController">
   <children>
      <Label text="Username:" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="55.0" />
         </StackPane.margin>
      </Label>
      <Label text="Password:" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets bottom="10.0" left="20.0" right="10.0" top="95.0" />
         </StackPane.margin>
      </Label>
      <TextField fx:id="registerUsernameField" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets bottom="10.0" left="100.0" right="100.0" top="50.0" />
         </StackPane.margin>
      </TextField>
      <TextField fx:id="registerPasswordField" StackPane.alignment="TOP_LEFT">
         <StackPane.margin>
            <Insets bottom="10.0" left="100.0" right="100.0" top="90.0" />
         </StackPane.margin>
      </TextField>
      <RadioButton fx:id="femaleRadioButton" mnemonicParsing="false" text="female" StackPane.alignment="CENTER_LEFT">
         <StackPane.margin>
            <Insets bottom="20.0" left="120.0" right="200.0" top="10.0" />
         </StackPane.margin>
      </RadioButton>
      <RadioButton fx:id="maleRadioButton" mnemonicParsing="false" text="male" StackPane.alignment="CENTER_RIGHT">
         <StackPane.margin>
            <Insets bottom="20.0" left="50.0" right="120.0" top="10.0" />
         </StackPane.margin>
      </RadioButton>
      <ComboBox fx:id="carComboBox" prefWidth="150.0" StackPane.alignment="BOTTOM_CENTER">
         <StackPane.margin>
            <Insets bottom="100.0" left="10.0" right="10.0" top="10.0" />
         </StackPane.margin>
      </ComboBox>
      <Button fx:id="registerButton" mnemonicParsing="false" onAction="#registerUser" text="Register" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets bottom="10.0" left="10.0" right="100.0" top="200.0" />
         </StackPane.margin>
      </Button>
      <Button fx:id="registerCancelButton" mnemonicParsing="false" onAction="#closeRegisterWindow" text="Cancel" StackPane.alignment="CENTER">
         <StackPane.margin>
            <Insets bottom="10.0" left="100.0" right="10.0" top="200.0" />
         </StackPane.margin>
      </Button>
   </children>
</StackPane>
